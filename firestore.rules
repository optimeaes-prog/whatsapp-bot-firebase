rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Only authenticated users can read/write
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Listings (formerly anuncios) - authenticated users can CRUD
    match /listings/{listingId} {
      allow read, write: if request.auth != null;
    }
    
    // Leads - authenticated users can read, functions can write
    match /leads/{leadId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Conversations (formerly conversaciones) - authenticated users can read, functions can write
    match /conversations/{convId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Qualified Leads (formerly cualificados) - authenticated users can read, functions can write
    match /qualifiedLeads/{qualId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Bot Config - authenticated users can read/write
    match /botConfig/{configId} {
      allow read, write: if request.auth != null;
    }
  }
}
