rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Only authenticated users can read/write
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
    
    // Anuncios - authenticated users can CRUD
    match /anuncios/{anuncioId} {
      allow read, write: if request.auth != null;
    }
    
    // Leads - authenticated users can read, functions can write
    match /leads/{leadId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Conversaciones - authenticated users can read, functions can write
    match /conversaciones/{convId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Cualificados - authenticated users can read, functions can write
    match /cualificados/{cualId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null;
    }
    
    // Bot Config - authenticated users can read/write
    match /botConfig/{configId} {
      allow read, write: if request.auth != null;
    }
  }
}
